<div class="d-flex flex-column justify-content-between align-items-between" style="height: 80vh">
  <div class="row">
    <div class="col-8">
      <h2><%= @group.name %></h2>
    </div>
    <div class="col-4">
      <p>$<%= @total %></p>
    </div>
  </div>

  <div>
    <% @subjects.each do |subject| %>
      <div class="card mb-2">
        <div class="card-body">
          <div class="row">
            <div class="col-8">
              <%= subject.name %>
            </div>
            <div class="col-4">
              $<%= subject.amount %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="d-flex flex-column justify-content-between align-items-between">
    <%= link_to "Add new subject", new_group_subject_path(@group), class: "btn btn-success" %> <br>
    <%= link_to "Back", groups_path, class: "btn btn-secondary" %>
  </div>
</div>