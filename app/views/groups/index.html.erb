<div class="d-flex flex-column justify-content-between align-items-between" style="height: 80vh">
  <h1 class="mb-3">Categories</h1>

  <div>
    <% @groups.each do |group| %>
      <div class="card mb-1">
        <div class="card-body">
          <div class="row">
            <div class="col">
              <%= image_tag(group.icon, alt: "Icon pic", height: "40px") %>
            </div>
            <div class="col">
              <%= link_to group.name, group_path(group) %>
            </div>
            <div class="col">
              $<%= group.subjects.sum(:amount) %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Add new group", new_group_path, class: "btn btn-success mt-3" %>
</div>