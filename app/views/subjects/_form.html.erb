<div class="d-flex flex-column justify-content-between align-items-between">
  

  <%= form_with model: @subject, url: group_subjects_path, class: "d-flex flex-column justify-content-between align-items-between" do |form| %>
    <div class="mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :amount, class: "form-label" %>
      <%= form.number_field :amount, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.collection_select(:groups, current_user.groups, :id, :name, {}, { multiple: true, size: 7, class: "form-select" }) %>
    </div>

    <%= form.submit class: "btn btn-primary" %>

  <% end %>

  <%= link_to "Back", group_path(@group), class: "btn btn-secondary mt-2" %>
</div>